{
  "sourceLang": "en",
  "targetLangs": ["fr", "ru"],
  "ui": {
    "sourceDir": "i18n/en",
    "targetDir": "i18n"
  },
  "data": {
    "sourceDir": "data/en",
    "targetDir": "data",
    "translateRules": {
      "education.json": {
        "paths": [
          "$[*].school",
          "$[*].degree",
          "$[*].program",
          "$[*].location",
          "$[*].highlights[*]"
        ]
      },
      "experience.json": {
        "paths": [
          "$[*].company",
          "$[*].role",
          "$[*].location",
          "$[*].highlights[*]"
        ]
      },
      "projects.json": {
        "paths": [
          "$.gameProjects[*].title",
          "$.gameProjects[*].summary",
          "$.gameProjects[*].description",
          "$.gameProjects[*].features[*]",
          "$.nonGameProjects[*].title",
          "$.nonGameProjects[*].summary",
          "$.nonGameProjects[*].description",
          "$.nonGameProjects[*].features[*]"
        ]
      },
      "skills.json": {
        "paths": [
          "$.categories[*].title",
          "$.languages[*].level"
        ]
      }
    }
  },
  "translate": {
    "provider": "deepl",
    "endpoint": "https://api-free.deepl.com/v2/translate",
    "maxBatchChars": 12000
  },
  "protectedTerms": [
    "Unity",
    "C#",
    "Git",
    "GitHub",
    ".NET",
    "Android",
    "Android Studio",
    "SOLID",
    "OOP",
    "GoF",
    "SDK",
    "AR",
    "VS Code",
    "Linux",
    "Windows",
    "Unity3D",
    "MonoBehaviour",
    "Visual Studio",
    "C++",
    "Java",
    "JavaScript",
    "TypeScript",
    "HTML",
    "CSS",
    "JSON",
    "API",
    "REST",
    "SQL",
    "NoSQL",
    "OpenGL",
    "DirectX",
    "Blender",
    "Photoshop",
    "Figma",
    "Node.js",
    "React",
    "Unity Editor"
  ]
}
